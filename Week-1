def lower_triangle(n):
    for i in range(1, n + 1):
        print('*' * i)

def upper_triangle(n):
    for i in range(n, 0, -1):
        print('*' * i)

def pyramid(n):
    for i in range(1, n + 1):
        print(' ' * (n - i) + '*' * (2 * i - 1))

# Number of rows for the patterns
n = 5

print("Lower Triangular Pattern:")
lower_triangle(n)
print("\nUpper Triangular Pattern:")
upper_triangle(n)
print("\nPyramid Pattern:")
pyramid(n)

